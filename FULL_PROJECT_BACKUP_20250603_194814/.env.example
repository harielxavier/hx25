# Firebase Configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Authentication
VITE_JWT_ACCESS_SECRET=your-access-token-secret-should-be-long-and-secure
VITE_JWT_REFRESH_SECRET=your-refresh-token-secret-should-be-long-and-secure
VITE_JWT_ACCESS_EXPIRATION=15m
VITE_JWT_REFRESH_EXPIRATION=7d
VITE_AUTH_RATE_LIMIT=5

# Analytics
VITE_GA_MEASUREMENT_ID=your-ga-measurement-id

# API Endpoints
VITE_API_URL=https://api.example.com

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_GALLERY=true
VITE_ENABLE_ADMIN=true

# Email Service
VITE_EMAIL_SERVICE_API_KEY=your-email-service-api-key
VITE_EMAIL_SERVICE_DOMAIN=your-email-service-domain
VITE_ADMIN_EMAIL=admin@example.com
VITE_CONTACT_EMAIL=contact@example.com

# Cloudinary (Image CDN)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# Weather Service
VITE_OPENWEATHERMAP_API_KEY=your-openweathermap-api-key
