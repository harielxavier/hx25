# Vite/Frontend environment variables (used at build time)
# Copy this file to .env (local) and add the same variables in Vercel → Project → Settings → Environment Variables

# Supabase (REQUIRED for production)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Sentry (optional but recommended)
VITE_SENTRY_DSN_FRONTEND=

# Cloudinary (optional; used for image optimization)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=
VITE_CLOUDINARY_FOLDER=

# Firebase (optional legacy features; safe to leave empty)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# API base (optional; defaults to http://localhost:3000/api)
VITE_API_URL=

# OpenWeatherMap (optional; used by VenueLightingTool)
VITE_OPENWEATHERMAP_API_KEY=

# JWT safeguards (optional; some utilities expect these)
VITE_JWT_ACCESS_SECRET=
VITE_JWT_REFRESH_SECRET=

# Claude/Anthropic (DO NOT expose in client for production; use a server proxy)
VITE_ANTHROPIC_API_KEY=

